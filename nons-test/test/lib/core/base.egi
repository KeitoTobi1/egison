--
-- Booleans
--
assertEqual "and"
  [True && True, True && False, False && True, False && False]
  [True, False, False, False]

assertEqual "or"
  [True || True, True || False, False || True, False || False]
  [True, True, True, False]

assertEqual "not"
  [not True, not False]
  [False, True]
